use("platzi_store")

db.createCollection('users', {
    validator: {
        $jsonSchema: {
            bsonType: 'object',
            required: ['email', 'password', 'role'],
            properties: {
                name: {
                    bsonType: 'string'
                },
                last_name: {
                    bsonType: 'string'
                },
                email: {
                    bsonType: 'string'
                },
                //validacion extra en base a una 
                //exprrsion regular
                password: {
                    bsonType: 'string',
                    //la expresion regular de estar entre
                    //^  $
                    //Valida Que haya caracteres 
                    //en Mayuscula desde la A a la Z
                    // y minuscula desde la a a la z
                    //y numeros de 0 al 9
                    //y al menos debe tenr un tama√±o de 8
                    pattern: "^[A-Za-z0-9]{8,}$"
                },
                age: {
                    bsonType: 'number',
                    minimum: 18,
                    maximum: 99
                },
                isSingle: {
                    bsonType: 'bool'
                },
                role: {
                    enum: ['customer', 'seller', 'admin']
                }
            }
        }
    }
})